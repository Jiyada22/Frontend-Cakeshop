    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Employee</title>
    <link rel="stylesheet" href="../css/edit_employee.css">
  </head>
  <body>

    <h1>Edit Employee </h1>
    <form action="/edit_employee/<%= Employee.employee_id %>"  method="post" enctype="multipart/form-data">
      <label>Username : 
      <input type="text" name="employee_username" id="employee_username" value="<%= Employee.employee_username%>" /></label>
      <br />
      <label>Password : 
      <input type="text" name="employee_password" id="employee_password" value="<%= Employee.employee_password%>" /></label>
      <br />
      <label>Position : 
        <input type="text" name="position" id="position" value="<%= Employee.position%>" /></label>
        <br />

        <label>Current Image :</label>
        <div>
          <img src="/uploaded_img/employee/<%= Employee.img %>" alt="Current Cake Image" style="max-width: 200px; height: auto;" />
          <input type="hidden" name="imgbefore" value="<%= Employee.img %>"/>
        </div>
        <br>
        <label for="img">Change Image</label>
        <input type="file" name="imgafter" />

        <br />
        <input type="submit" value="Edit" />
    </form>

    <center><a href="/manage_employee">Back to List</a></center>
